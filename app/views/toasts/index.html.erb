<p id="notice"><%= notice %></p>

<h1>Listing Toasts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toasts.each do |toast| %>
      <tr>
        <td><%= link_to 'Show', toast %></td>
        <td><%= link_to 'Edit', edit_toast_path(toast) %></td>
        <td><%= link_to 'Destroy', toast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

